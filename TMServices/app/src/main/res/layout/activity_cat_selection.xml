 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context="com.cdapps.tmservices.CatSelection"
     android:background="#ffffffff">

     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:id="@+id/relativeLayout"
         android:background="@color/TMYellow" >

         <ImageView
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/yelLine"
             android:layout_alignParentBottom="false"
             android:layout_below="@+id/titleText"
             android:src="@drawable/line_separator" />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/backImg"
             android:layout_centerVertical="true"
             android:src="@drawable/back_brown" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:text="Category"
             android:id="@+id/titleText"
             android:padding="10dp"
             android:layout_centerInParent="true"
             android:textStyle="bold" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:text="Back"
             android:id="@+id/backText"
             android:layout_toRightOf="@+id/backImg"
             android:layout_centerVertical="true"
             android:textColor="@color/TMYellowFont" />

     </RelativeLayout>

     <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/scrollView"
         android:layout_below="@+id/relativeLayout" >

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/list"></LinearLayout>
     </ScrollView>

 </RelativeLayout>
